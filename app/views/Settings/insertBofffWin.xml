<Alloy>
	<Window id="win" title="Add Bofff">
		<ScrollView layout="vertical">
			
			<Label top="40" class="appTitleLabel">Add a new Bofff !</Label>
			
			<TextField class="allStyles" switchValue="1" onChange="textFieldChanges" hintText="Name">ahmed</TextField>
			<TextField class="allStyles" switchValue="2" onChange="textFieldChanges" hintText="Phone Number"></TextField>
			<TextField class="allStyles" switchValue="3" onChange="textFieldChanges" hintText="Email">ahmed</TextField>
			<TextField class="allStyles" switchValue="4" onChange="textFieldChanges" hintText="Gender">male</TextField>
			
			<Button class="allStyles" onClick="openLibrary">Choose Picture</Button>
			
			<Button class="allStyles" onClick="continuePressed">Continue</Button>
					
		</ScrollView>
		
		<AlertDialog id="dialog_confirm" onClick="dialogConfirmPressed" title="Confirm data">
            <ButtonNames>
                <ButtonName>Edit</ButtonName>
                <ButtonName>Confirm</ButtonName>
            </ButtonNames>
        </AlertDialog>
		
	</Window>
</Alloy>
