<Alloy>
	<Window id="win" title="Edit My Profile">
		
		<RightNavButton platform="ios">
			<Button onClick="doneEditing" title="Done"/>
		</RightNavButton>
		
		<!-- The Menu tag adds the Android menu. -->
        <Menu platform="android">
            <!-- Cannot specify node text.  Use attributes only. -->
            <MenuItem title="Done" onClick="doneEditing" showAsAction="Ti.Android.SHOW_AS_ACTION_IF_ROOM" />
        </Menu>
		
		
		<ScrollView layout ="vertical" height="100%">
			
			<View layout="horizontal" backgroundColor="blue" top="50" height="100" width="100%">
				<TextField id="fullName" onChange="textFieldsEditing" />
			</View>
			
			<View layout="horizontal" backgroundColor="blue" top="50" height="100" width="100%">
				<TextArea id="phone_numbers" onChange="textFieldsEditing" />
			</View>
			
		</ScrollView>
		
	</Window>
</Alloy>
