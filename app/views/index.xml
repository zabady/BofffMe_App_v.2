<Alloy>
	
	<Require id="settingsWin" src="settingsWin" type="view" platform="ios" />
	
	<TabGroup id="tabGroup">
		
		<!-- Android Menu -->
		<Menu platform="android">
            <!-- Cannot specify node text.  Use attributes only. -->
            <MenuItem icon="/images/icon_settings.png" onClick="settingsClicked" showAsAction="Ti.Android.SHOW_AS_ACTION_IF_ROOM" />
        </Menu>
		
		
		<!-- Tab 1 : QrCode Window -->
		<Tab title="QR Code" icon="/images/QR-code-7aram.png">
    		<Require id="qrCodeWin" src="qrCodeWin" type="view" />
        </Tab>
        
        
        <!-- Tab 2 : Contacts Window -->
        <Tab title="Contacts" icon="/images/man-7aram.png">
    		<Require id="contactsWin" src="Contacts/coreContactsWin" type="view" />
        </Tab>
		
		
		<!-- Tab 3 -->
		<Tab title="Tab 3" icon="/images/love-7aram.png">
			<Window title="Tab 3">
				
				<RightNavButton>
					<Button class="settingsBtn" onClick="settingsClicked" />
				</RightNavButton>
				<LeftNavButton>
					<ImageView class="logo"/>
				</LeftNavButton>
				
				<Label>I am Window 2</Label>
			</Window>
		</Tab>
		
	</TabGroup>
	
</Alloy>